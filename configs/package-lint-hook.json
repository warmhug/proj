{
  "name": "root",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint '**/*/src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install",
    "prettier": ""
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.0",
    "pretty-quick": "^4.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.{js,jsx}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "gitHooks": {
    "pre-commit": "pretty-quick --staged"
  }
}
